<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.linkpc.liubin.android_project1.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Math Game"
        android:id="@+id/textPartA"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="38sp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/textPartA"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:src="@mipmap/by1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/buttonPlay"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/buttonHiScore"
        android:layout_alignEnd="@+id/buttonHiScore"
        android:layout_alignLeft="@+id/buttonHiScore"
        android:layout_alignStart="@+id/buttonHiScore" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Scores"
        android:id="@+id/buttonHiScore"
        android:layout_below="@+id/buttonPlay"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:id="@+id/buttonQuit"
        android:layout_below="@+id/buttonHiScore"
        android:layout_alignRight="@+id/buttonHiScore"
        android:layout_alignEnd="@+id/buttonHiScore"
        android:layout_alignLeft="@+id/buttonHiScore"
        android:layout_alignStart="@+id/buttonHiScore" />
</RelativeLayout>
